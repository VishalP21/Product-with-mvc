@model Category

<form asp-action="Index" asp-controller="Category" method="post">
	<input type="hidden" asp-for="CategoryId" />
	<label>Enter Category Name</label>
	<input type="text" asp-for="CategoryName" placeholder="Category Name"  />
	<label>Enter Category Description</label>
	<textarea asp-for="Description" placeholder="Category Description"></textarea>
	<input type="submit" value="save" />
</form>
